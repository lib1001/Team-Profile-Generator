const Manager = require("../lib/Manager");

test("Can create an office number.", () => {
    const testOfficeNumber = 2;
    const newEmployee = new Manager("Lauren", 2, "lburke522@gmail.com", testOfficeNumber);
    expect(newEmployee.officeNumber).toBe(testOfficeNumber);
});

test("Testing officeNumber will return office number.", () => {
    const testOfficeNumber = 2;
    const newEmployee = new Manager("Lauren", 2, "lburke522@gmail.com", testOfficeNumber);
    expect(newEmployee.getOfficeNumber()).toBe(testOfficeNumber);
});

test("Testing role.", () => {
    const returnValue = "Manager";
    const newEmployee = new Manager("Lauren", 2, "lburke522@gmail.com", 2);
    expect(newEmployee.getRole()).toBe(returnValue);
});