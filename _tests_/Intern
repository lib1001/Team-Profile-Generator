const Intern = require("../lib/Intern");

test("Can create school.", () => {
    const testSchool = "School Name";
    const newEmployee = new Intern("Lauren", 2, "lburke522@gmail.com", testSchool);
    expect(newEmployee.school).toBe(testSchool);
});

test("Testing officeNumber will return office number.", () => {
    const testSchool = "School Name";
    const newEmployee = new Intern("Lauren", 2, "lburke522@gmail.com", testSchool);
    expect(newEmployee.getSchool()).toBe(testSchool);
});

test("Testing role.", () => {
    const returnValue = "Intern";
    const newEmployee = new Intern("Lauren", 2, "lburke522@gmail.com", "School Name");
    expect(newEmployee.getRole()).toBe(returnValue);
});